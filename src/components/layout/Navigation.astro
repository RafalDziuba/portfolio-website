---
import { getRelativeLocaleUrl } from 'astro:i18n';
import { getLangFromUrl, useTranslations } from '../../i18n/utils';
import LanguagePicker from '../ui/LanguagePicker.astro';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const navLinks = [
  { text: t('nav.home'), href: `/${lang === 'en' ? 'en/' : ''}#hero` },
  { text: t('nav.about'), href: `/${lang === 'en' ? 'en/' : ''}#about` },
  { text: t('nav.projects'), href: `/${lang === 'en' ? 'en/' : ''}#projects` },
];
---

<nav class="fixed top-0 left-0 right-0 z-50 py-4 bg-white ] border-b border-gray-100 transition-colors duration-300">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between">
      <div class="shrink-0">
        <a href={`/${lang === 'en' ? 'en/' : ''}`} class="text-xl font-bold tracking-tight text-gray-900 flex items-center gap-2">
          {/* Circular image avatar */}
          <img src="/avatar-placeholder.png" alt="Rafal Dziuba" class="w-8 h-8 rounded-full bg-gray-200 object-cover" />
          <span class="hidden sm:inline">RafalDziuba</span>
        </a>
      </div>
      
      {/* Desktop Menu */}
      <div class="hidden md:flex flex-1 justify-center">
        <div class="flex items-center space-x-6">
          {navLinks.map((link) => (
            <a href={link.href} class="text-gray-500 hover:text-gray-900 :text-white text-sm font-medium transition-colors">
              {link.text}
            </a>
          ))}
        </div>
      </div>
      
      <div class="hidden md:flex items-center space-x-4">
        {/* Toggle Icons Container */}
        <button id="theme-toggle-desktop" class="text-gray-400 hover:text-gray-900 :text-white transition-colors" aria-label="Toggle theme">
          <svg class="w-5 h-5 " fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" /></svg>
          <svg class="w-5 h-5 hidden " fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" /></svg>
        </button>
        
        <LanguagePicker />
      </div>
      
      {/* Mobile menu button */}
      <div class="flex md:hidden items-center space-x-4">
        <LanguagePicker />
        
        <button id="theme-toggle-mobile" class="text-gray-400 hover:text-gray-900 :text-white transition-colors">
           <svg class="w-5 h-5 " fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" /></svg>
           <svg class="w-5 h-5 hidden " fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" /></svg>
        </button>

        <button type="button" id="mobile-menu-button" class="inline-flex items-center justify-center p-2 text-gray-400 hover:text-gray-900 :text-white focus:outline-none transition-colors" aria-controls="mobile-menu" aria-expanded="false">
          <span class="sr-only">Open main menu</span>
          <svg class="block h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>
  </div>

  {/* Mobile Menu Overlay */}
  <div class="md:hidden absolute top-full left-0 w-full bg-white ] border-b border-gray-100 shadow-lg overflow-hidden transition-all duration-300 max-h-0 opacity-0 invisible" id="mobile-menu">
    <div class="px-4 pt-2 pb-6 space-y-1">
      {navLinks.map((link) => (
        <a href={link.href} class="text-gray-500 hover:text-gray-900 :text-white block py-3 text-base font-medium">
          {link.text}
        </a>
      ))}
    </div>
  </div>
</nav>

<script>
  // Mobile menu toggle logic
  const btn = document.getElementById('mobile-menu-button');
  const menu = document.getElementById('mobile-menu');

  if (btn && menu) {
    btn.addEventListener('click', () => {
      const isClosed = menu.classList.contains('max-h-0');
      if (isClosed) {
        menu.classList.remove('max-h-0', 'opacity-0', 'invisible');
        menu.classList.add('max-h-[400px]', 'opacity-100', 'visible');
      } else {
        menu.classList.add('max-h-0', 'opacity-0', 'invisible');
        menu.classList.remove('max-h-[400px]', 'opacity-100', 'visible');
      }
    });
  }

  // Theme log logic
  const themeToggles = [
    document.getElementById('theme-toggle-desktop'),
    document.getElementById('theme-toggle-mobile')
  ];
  
  let isDarkModeLogState = false;

  const setupThemeToggle = (toggleBtn: HTMLElement | null) => {
    if (!toggleBtn) return;
    toggleBtn.addEventListener('click', () => {
      isDarkModeLogState = !isDarkModeLogState;
      if (isDarkModeLogState) {
        console.log("Selected mode: dark");
      } else {
        console.log("Selected mode: light");
      }
    });
  };

  themeToggles.forEach(setupThemeToggle);
</script>
