---
interface Props {
  currentLang?: 'en' | 'pl';
}
const { currentLang = 'en' } = Astro.props;

const content = currentLang === 'pl' ? {
  greeting: "Cześć, tu Rafał Dziuba",
  role: "Astro, Node & Fullstack Developer",
  description: "Zajmuję się budowaniem responsywnych, wydajnych i dostępnych aplikacji webowych. Dbam o UX oraz czysty kod.",
  primaryAction: "Skontaktuj się ze mną",
  secondaryAction: "Moje projekty"
} : {
  greeting: "Hi, I'm Rafał Dziuba",
  role: "Astro, Node & Fullstack Developer",
  description: "I focus on building responsive, high-performance, and accessible web applications. I care about UX and clean code.",
  primaryAction: "Get in touch",
  secondaryAction: "View my work"
};
---

<section id="hero" class="relative pt-32 pb-20 sm:pt-40 sm:pb-24 overflow-hidden flex flex-col items-center justify-center min-h-[80vh]">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10 text-center">
    
    <div class="mb-8">
      <img src="/avatar-placeholder.png" alt="Rafal Dziuba" class="w-20 h-20 rounded-full mx-auto mb-6 object-cover bg-gray-200 " />
      <span class="text-sm font-medium text-blue-600 tracking-wide uppercase">Frontend, Backend, Design</span>
    </div>

    <h1 class="text-5xl sm:text-7xl font-bold tracking-tighter text-gray-900 mb-6">
      Building digital<br/>products.
    </h1>
    
    <p class="mt-6 text-xl text-gray-500 max-w-2xl mx-auto mb-10 leading-relaxed">
      I craft thoughtful interfaces and scalable systems that bridge the gap between design and engineering.
    </p>
    
    <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
      <a href="#footer" class="inline-flex items-center justify-center rounded-full bg-gray-900 px-8 py-3 text-sm font-medium text-white hover:bg-gray-800 :bg-gray-100 transition-colors">
        {content.primaryAction} 
        <svg class="w-4 h-4 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" /></svg>
      </a>
      <a href="#projects" class="inline-flex items-center justify-center rounded-full bg-white border border-gray-200 px-8 py-3 text-sm font-medium text-gray-900 hover:bg-gray-50 :bg-gray-800 transition-colors">
        {content.secondaryAction}
      </a>
    </div>
  </div>
  
  {/* Delicate decorative background element */}
  <div class="absolute top-1/2 right-0 -translate-y-1/2 translate-x-1/3 w-[800px] h-[800px] bg-blue-100 rounded-full blur-3xl opacity-50 z-0 pointer-events-none"></div>
</section>
