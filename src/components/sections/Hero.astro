---
import { getLangFromUrl, useTranslations } from '../../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section id="hero" class="relative pt-32 pb-20 sm:pt-40 sm:pb-24 overflow-hidden flex flex-col items-center justify-center min-h-[80vh]">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10 text-center">
    
    <div class="mb-8">
      <img src="/avatar-placeholder.png" alt="Rafal Dziuba" class="w-20 h-20 rounded-full mx-auto mb-6 object-cover bg-gray-200 " />
      <span class="text-sm font-medium text-blue-600 tracking-wide uppercase">{t('hero.role')}</span>
    </div>

    <h1 class="text-5xl sm:text-7xl font-bold tracking-tighter text-gray-900 mb-6">
      {t('hero.greeting')}
    </h1>
    
    <p class="mt-6 text-xl text-gray-500 max-w-2xl mx-auto mb-10 leading-relaxed">
      {t('hero.description')}
    </p>
    
    <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
      <a href={`/${lang === 'en' ? 'en/' : ''}#footer`} class="inline-flex items-center justify-center rounded-full bg-gray-900 px-8 py-3 text-sm font-medium text-white hover:bg-gray-800 :bg-gray-100 transition-colors">
        {t('hero.primary')} 
        <svg class="w-4 h-4 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" /></svg>
      </a>
      <a href={`/${lang === 'en' ? 'en/' : ''}#projects`} class="inline-flex items-center justify-center rounded-full bg-white border border-gray-200 px-8 py-3 text-sm font-medium text-gray-900 hover:bg-gray-50 :bg-gray-800 transition-colors">
        {t('hero.secondary')}
      </a>
    </div>
  </div>
  
  {/* Delicate decorative background element */}
  <div class="absolute top-1/2 right-0 -translate-y-1/2 translate-x-1/3 w-[800px] h-[800px] bg-blue-100 rounded-full blur-3xl opacity-50 z-0 pointer-events-none"></div>
</section>
