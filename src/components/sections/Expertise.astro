---
import type { Experience } from '../../types/models';
import ExperienceCard from '../ui/ExperienceCard.astro';

interface Props {
  currentLang?: 'en' | 'pl';
}

const { currentLang = 'en' } = Astro.props;

const labels = currentLang === 'pl' ? {
  title: "Umiejętności i Technologie"
} : {
  title: "Skills & Technologies"
};

const mockExpertise: Experience[] = [
  {
    companyName: "Frontend Development",
    companyLogo: "",
    isCurrent: false,
    position: "UI/UX & Performance",
    startDate: "2018",
    endDate: currentLang === 'pl' ? "Obecnie" : "Present",
    description: currentLang === 'pl' ? [
      "Budowa responsywnych aplikacji Single Page Applications (SPA).",
      "Dbałość o optymalizację Lighthouse i dostępność wg standardów WCAG."
    ] : [
      "Building responsive Single Page Applications (SPA).",
      "Ensuring Lighthouse optimization and WCAG accessibility standards."
    ],
    technologies: ["React", "Astro", "Tailwind CSS", "TypeScript"]
  },
  {
    companyName: "Backend & API",
    companyLogo: "",
    isCurrent: false,
    position: "Architecture & Data",
    startDate: "2020",
    endDate: currentLang === 'pl' ? "Obecnie" : "Present",
    description: currentLang === 'pl' ? [
      "Projektowanie i wdrażanie bezpiecznych API RESTowych.",
      "Integracje systemów zewnętrznych i zarządzanie danymi."
    ] : [
      "Designing and implementing secure REST APIs.",
      "External system integrations and data management."
    ],
    technologies: ["Node.js", "Express", "PostgreSQL", "Redis"]
  }
];
---

<section id="expertise" class="py-24 sm:py-32">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="mb-12">
      <h2 class="text-sm font-medium text-gray-500 tracking-wide uppercase mb-2">Capabilities</h2>
      <h3 class="text-3xl sm:text-4xl font-bold tracking-tight text-gray-900 ">{labels.title}</h3>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {/* Skill items will be rendered as bento boxes. E.g. using simple divs with background styling */}
      <div class="bg-gray-50 border border-gray-100 p-8 rounded-3xl flex flex-col justify-between aspect-square lg:aspect-auto">
        <div>
          <div class="w-12 h-12 bg-white rounded-2xl flex items-center justify-center border border-gray-100 mb-6 shadow-sm">
             <svg class="w-6 h-6 text-gray-700 " fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" /></svg>
          </div>
          <h4 class="text-xl font-semibold text-gray-900 mb-2">Frontend</h4>
          <p class="text-gray-500 ">React, Next.js, Tailwind CSS, Astro, TypeScript, Redux, State Management</p>
        </div>
      </div>

      <div class="bg-gray-50 border border-gray-100 p-8 rounded-3xl flex flex-col justify-between aspect-square lg:aspect-auto">
        <div>
          <div class="w-12 h-12 bg-white rounded-2xl flex items-center justify-center border border-gray-100 mb-6 shadow-sm">
             <svg class="w-6 h-6 text-gray-700 " fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" /></svg>
          </div>
          <h4 class="text-xl font-semibold text-gray-900 mb-2">Backend</h4>
          <p class="text-gray-500 ">Node.js, Express, PostgreSQL, MongoDB, REST APIs, GraphQL</p>
        </div>
      </div>

      <div class="bg-gray-50 border border-gray-100 p-8 rounded-3xl flex flex-col justify-between aspect-square lg:aspect-auto">
        <div>
           <div class="w-12 h-12 bg-white rounded-2xl flex items-center justify-center border border-gray-100 mb-6 shadow-sm">
             <svg class="w-6 h-6 text-gray-700 " fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 5a1 1 0 011-1h14a1 1 0 011 1v2a1 1 0 01-1 1H5a1 1 0 01-1-1V5zM4 13a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H5a1 1 0 01-1-1v-6zM16 13a1 1 0 011-1h2a1 1 0 011 1v6a1 1 0 01-1 1h-2a1 1 0 01-1-1v-6z" /></svg>
          </div>
          <h4 class="text-xl font-semibold text-gray-900 mb-2">Design Systems</h4>
          <p class="text-gray-500 ">Figma, Storybook, Component Libraries, Design Tokens</p>
        </div>
      </div>

      <div class="bg-gray-50 border border-gray-100 p-8 rounded-3xl flex flex-col justify-between lg:col-span-2">
        <div>
           <div class="w-12 h-12 bg-white rounded-2xl flex items-center justify-center border border-gray-100 mb-6 shadow-sm">
             <svg class="w-6 h-6 text-gray-700 " fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" /></svg>
          </div>
          <h4 class="text-xl font-semibold text-gray-900 mb-2">Architecture</h4>
          <p class="text-gray-500 ">System Design, Microservices, Serverless, Cloud Infrastructure (AWS, Vercel), CI/CD</p>
        </div>
      </div>

       <div class="bg-gray-50 border border-gray-100 p-8 rounded-3xl flex flex-col justify-between">
        <div>
           <div class="w-12 h-12 bg-white rounded-2xl flex items-center justify-center border border-gray-100 mb-6 shadow-sm">
             <svg class="w-6 h-6 text-gray-700 " fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z" /></svg>
          </div>
          <h4 class="text-xl font-semibold text-gray-900 mb-2">Mobile</h4>
          <p class="text-gray-500 ">React Native, PWA, Responsive Design</p>
        </div>
      </div>
    </div>
  </div>
</section>
