---
interface Props {
  href?: string;
  type?: "button" | "submit" | "reset";
  target?: string;
  class?: string;
}

const { href, type = "button", target, class: className = "" } = Astro.props;

// Base styles for the button, including focus and active states
const baseStyles = "inline-flex items-center justify-center rounded-lg bg-gray-900 px-5 py-2.5 text-sm font-medium text-white hover:bg-gray-800 focus:outline-none focus:ring-4 focus:ring-gray-300 :bg-gray-200 :ring-gray-700 transition-colors duration-200";
const combinedClasses = `${baseStyles} ${className}`.trim();
---

{
  href ? (
    <a href={href} target={target} class={combinedClasses}>
      <slot />
    </a>
  ) : (
    <button type={type} class={combinedClasses}>
      <slot />
    </button>
  )
}
